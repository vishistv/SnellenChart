<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_weight="2"
            android:background="#000000"
            android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="5"
        android:layout_margin="10dp"
        android:background="#fff"
        android:layout_weight="1"
        android:padding="20dp" >

        <TextView
            android:id="@+id/txtOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="F D P L T C E O"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10dp"
            android:text="P E Z O L C F T D"
            android:layout_weight="1"
            android:paddingTop="20dp"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:background="#000"
            android:gravity="center">
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="#fff">

                <TextView
                    android:id="@+id/txtThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="E"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="F P"
            android:textSize="28dp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="20dp"/>


        <TextView
            android:id="@+id/txtFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="T O Z"
            android:gravity="center"
            android:textSize="26dp"
            android:layout_weight="1"
            android:paddingTop="20dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:onClick="onSizePlus"
                        android:text="+" />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true"
                        android:onClick="onSizeMinus"
                        android:text="-" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nextBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:onClick="onNextClick"
                    android:text="Show number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Contrast Level:"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="           Low"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="   Medium"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="         High"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Very High"
                        android:textColor="#000" />
                </RadioGroup>

                <Button
                    android:id="@+id/stopBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:onClick="onStopClick"
                    android:text="FINISH" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>